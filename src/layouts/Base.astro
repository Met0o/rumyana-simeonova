---
const { title = 'Rumyana Simeonova', description = 'Therapist in training — blog & booking' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href="https://rumyanasimeonova.com" />
    <link rel="icon" href="/favicon.ico" />
    <style>
      :root { --max: 800px; }
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin:0; line-height:1.6; }
      header, main, footer { padding: 1.25rem; }
      .wrap { max-width: var(--max); margin: 0 auto; }
      nav a { margin-right: 1rem; text-decoration: none; }
      a { color: inherit; }
      .cta { display:inline-block; padding:.6rem 1rem; border:1px solid #222; border-radius:8px; text-decoration:none; }
      .muted { color:#666; font-size:.95rem; }
      article img { max-width: 100%; height:auto; }
    </style>
  </head>
  <body>
    <header>
      <div class="wrap">
        <h1 style="margin:.2rem 0">Rumyana Simeonova</h1>
        <nav>
          <a href="/">Home</a>
          <a href="/about/">About</a>
          <a href="/services/">Services</a>
          <a href="/booking/">Booking</a>
          <a href="/blog/">Blog</a>
          <a href="/contact/">Contact</a>
        </nav>
      </div>
    </header>
    <main>
      <div class="wrap">
        <slot />
      </div>
    </main>
    <footer>
      <div class="wrap muted">
        <p>© {new Date().getFullYear()} Rumyana Simeonova. All rights reserved.</p>
        <p><a href="/privacy/">Privacy</a> · <a href="/terms/">Terms</a></p>
      </div>
    </footer>
  </body>
</html>
